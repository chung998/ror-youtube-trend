<!-- 수집 피드백 알림 컨테이너 -->
<div id="collectFeedback" class="collect-feedback"></div>

<script>
// CSRF 토큰 설정
const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

// 피드백 알림 표시 함수
function showFeedback(message, type = 'success', duration = 5000) {
  const feedback = document.getElementById('collectFeedback');
  const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
  const iconClass = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-triangle';
  
  const alertHtml = `
    <div class="alert ${alertClass} alert-dismissible fade show shadow" role="alert">
      <div class="d-flex align-items-center">
        <i class="${iconClass} me-2"></i>
        <div class="flex-grow-1">
          ${message}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  `;
  
  feedback.innerHTML = alertHtml;
  
  // 자동 제거
  setTimeout(() => {
    const alert = feedback.querySelector('.alert');
    if (alert) {
      alert.classList.remove('show');
      setTimeout(() => {
        feedback.innerHTML = '';
      }, 150);
    }
  }, duration);
}

// 개별 국가 수집 함수
async function collectSingleCountry(region, name, buttonElement) {
  if (!confirm(`${name} 지역의 트렌드 데이터를 수집하시겠습니까?`)) {
    return;
  }
  
  // 버튼 상태 변경
  buttonElement.disabled = true;
  buttonElement.classList.add('progress-pulse');
  buttonElement.querySelector('.btn-text').classList.add('d-none');
  buttonElement.querySelector('.btn-loading').classList.remove('d-none');
  
  try {
    const response = await fetch('/admin/collect_now', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      body: JSON.stringify({
        region: region,
        type: 'all'
      })
    });
    
    const data = await response.json();
    
    if (data.success) {
      showFeedback(`${name} 지역에서 ${data.videos_collected}개의 영상을 성공적으로 수집했습니다!`, 'success');
      // 통계 새로고침
      setTimeout(() => location.reload(), 2000);
    } else {
      showFeedback(`${name} 지역 수집 실패: ${data.message}`, 'error');
    }
  } catch (error) {
    console.error('수집 요청 실패:', error);
    showFeedback(`${name} 지역 수집 중 오류가 발생했습니다.`, 'error');
  } finally {
    // 버튼 상태 복원
    buttonElement.disabled = false;
    buttonElement.classList.remove('progress-pulse');
    buttonElement.querySelector('.btn-text').classList.remove('d-none');
    buttonElement.querySelector('.btn-loading').classList.add('d-none');
  }
}

// 전체 국가 수집 함수
async function collectAllCountries() {
  if (!confirm('모든 등록된 국가의 트렌드 데이터를 수집하시겠습니까?\n\n총 <%= YoutubeRegions.primary_codes.length %>개국을 순차적으로 수집하며 약 5-8분 정도 소요됩니다.')) {
    return;
  }
  
  const collectAllBtn = document.getElementById('collectAllBtn');
  const progressSpan = document.getElementById('collectProgress');
  
  // 모든 수집 버튼 비활성화
  const allButtons = document.querySelectorAll('.collect-single-btn, #collectAllBtn');
  allButtons.forEach(btn => btn.disabled = true);
  
  // 전체 수집 버튼 상태 변경
  collectAllBtn.classList.add('progress-pulse');
  collectAllBtn.querySelector('.btn-text').classList.add('d-none');
  collectAllBtn.querySelector('.btn-loading').classList.remove('d-none');
  
  try {
    showFeedback('전체 국가 수집을 시작합니다...', 'success', 3000);
    
    const response = await fetch('/admin/collect_all', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      }
    });
    
    const data = await response.json();
    
    if (data.success) {
      let message = `전체 수집 완료!\n`;
      message += `총 ${data.total_videos}개의 영상을 수집했습니다.\n`;
      message += `성공: ${data.success_count}개국, 실패: ${data.failure_count}개국`;
      
      showFeedback(message.replace(/\n/g, '<br>'), 'success', 8000);
      
      // 상세 결과 표시
      if (data.successful_regions.length > 0) {
        console.log('수집 성공한 국가들:');
        data.successful_regions.forEach(region => {
          console.log(`- ${region.region}: ${region.count}개 영상`);
        });
      }
      
      if (data.failed_regions.length > 0) {
        console.log('수집 실패한 국가들:');
        data.failed_regions.forEach(region => {
          console.log(`- ${region.region}: ${region.error}`);
        });
      }
      
      // 페이지 새로고침
      setTimeout(() => location.reload(), 3000);
    } else {
      showFeedback(`전체 수집 실패: ${data.message}`, 'error');
    }
  } catch (error) {
    console.error('전체 수집 요청 실패:', error);
    showFeedback('전체 수집 중 오류가 발생했습니다.', 'error');
  } finally {
    // 버튼 상태 복원
    allButtons.forEach(btn => btn.disabled = false);
    collectAllBtn.classList.remove('progress-pulse');
    collectAllBtn.querySelector('.btn-text').classList.remove('d-none');
    collectAllBtn.querySelector('.btn-loading').classList.add('d-none');
  }
}
</script>