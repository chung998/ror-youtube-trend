<% content_for :title, "데이터베이스 테이블: #{@table_name}" %>

<div class="container-fluid py-4">
  <!-- 헤더 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
              <li class="breadcrumb-item">
                <%= link_to "관리자", admin_root_path, class: "text-decoration-none" %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to "데이터베이스", admin_database_path, class: "text-decoration-none" %>
              </li>
              <li class="breadcrumb-item active" aria-current="page"><%= @table_name %></li>
            </ol>
          </nav>
          <h1 class="h2 mb-1">
            <i class="fas fa-table text-primary me-2"></i>
            테이블: <code class="text-primary"><%= @table_name %></code>
          </h1>
          <p class="text-muted mb-0">총 <strong><%= number_with_delimiter(@total_count) %></strong>개 레코드</p>
        </div>
        <div>
          <%= link_to admin_database_path, class: "btn btn-outline-secondary me-2" do %>
            <i class="fas fa-arrow-left me-1"></i> 목록으로
          <% end %>
          <button class="btn btn-primary" onclick="location.reload()">
            <i class="fas fa-sync-alt me-1"></i> 새로고침
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- 테이블 정보 카드 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h6 class="text-muted text-uppercase mb-2">
                <i class="fas fa-info-circle me-1"></i>
                테이블 정보
              </h6>
              <div class="row g-3">
                <div class="col-auto">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-hashtag text-primary me-2"></i>
                    <div>
                      <div class="fw-bold"><%= @total_count %></div>
                      <small class="text-muted">총 레코드</small>
                    </div>
                  </div>
                </div>
                <div class="col-auto">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-columns text-success me-2"></i>
                    <div>
                      <div class="fw-bold"><%= @columns.length %></div>
                      <small class="text-muted">컬럼 수</small>
                    </div>
                  </div>
                </div>
                <div class="col-auto">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-file-alt text-info me-2"></i>
                    <div>
                      <div class="fw-bold"><%= @page %> / <%= @total_pages %></div>
                      <small class="text-muted">페이지</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-md-end">
              <!-- 페이지네이션 컨트롤 -->
              <div class="btn-group" role="group">
                <% if @page > 1 %>
                  <%= link_to admin_database_table_path(table: @table_name, page: @page - 1), 
                             class: "btn btn-outline-primary" do %>
                    <i class="fas fa-chevron-left"></i> 이전
                  <% end %>
                <% else %>
                  <button class="btn btn-outline-secondary" disabled>
                    <i class="fas fa-chevron-left"></i> 이전
                  </button>
                <% end %>
                
                <% if @page < @total_pages %>
                  <%= link_to admin_database_table_path(table: @table_name, page: @page + 1), 
                             class: "btn btn-outline-primary" do %>
                    다음 <i class="fas fa-chevron-right"></i>
                  <% end %>
                <% else %>
                  <button class="btn btn-outline-secondary" disabled>
                    다음 <i class="fas fa-chevron-right"></i>
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 데이터 테이블 -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
          <h6 class="mb-0">
            <i class="fas fa-database text-primary me-2"></i>
            테이블 데이터
            <span class="badge bg-primary bg-opacity-10 text-primary ms-2">
              <%= (@page - 1) * @per_page + 1 %>-<%= [@page * @per_page, @total_count].min %> / <%= @total_count %>
            </span>
          </h6>
        </div>
        <div class="card-body p-0">
          <% if @rows && @rows.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <% @columns.each do |column| %>
                      <th class="border-0 px-3 py-3">
                        <div class="d-flex flex-column">
                          <span class="fw-bold text-dark"><%= column.name %></span>
                          <small class="text-muted text-uppercase">
                            <%= column.type %>
                            <% if column.limit %>
                              (<%= column.limit %>)
                            <% end %>
                          </small>
                        </div>
                      </th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% @rows.each_with_index do |row, index| %>
                    <tr class="<%= 'table-warning' if index == 0 %>">
                      <% @columns.each do |column| %>
                        <td class="px-3 py-3">
                          <% value = row[column.name] %>
                          <% if value.nil? %>
                            <span class="text-muted fst-italic">NULL</span>
                          <% elsif value.is_a?(String) && value.length > 100 %>
                            <div class="text-wrap" style="max-width: 300px;">
                              <span class="d-inline-block text-truncate" style="max-width: 200px;" 
                                    title="<%= html_escape(value) %>">
                                <%= truncate(value, length: 80) %>
                              </span>
                              <% if value.length > 80 %>
                                <button class="btn btn-link btn-sm p-0 ms-1" 
                                        onclick="showFullText('<%= html_escape(value) %>')">
                                  <i class="fas fa-expand-alt"></i>
                                </button>
                              <% end %>
                            </div>
                          <% elsif column.name == 'id' %>
                            <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">
                              <%= value %>
                            </span>
                          <% elsif column.name.include?('_at') && value.is_a?(String) %>
                            <div class="d-flex flex-column">
                              <span class="fw-medium">
                                <%= Date.parse(value).strftime("%Y-%m-%d") rescue value %>
                              </span>
                              <small class="text-muted">
                                <%= Time.parse(value).strftime("%H:%M:%S") rescue '' %>
                              </small>
                            </div>
                          <% elsif column.name.include?('count') || column.name.include?('number') %>
                            <span class="fw-bold text-primary">
                              <%= number_with_delimiter(value) %>
                            </span>
                          <% elsif column.name.include?('url') %>
                            <a href="<%= value %>" target="_blank" class="text-decoration-none">
                              <i class="fas fa-external-link-alt me-1"></i>
                              <%= truncate(value, length: 30) %>
                            </a>
                          <% else %>
                            <%= value %>
                          <% end %>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <div class="icon-shape bg-light text-muted rounded-circle mx-auto mb-3" style="width: 4rem; height: 4rem;">
                <i class="fas fa-database fa-2x"></i>
              </div>
              <h6 class="text-muted">데이터가 없습니다</h6>
              <p class="text-muted small mb-0">이 테이블에는 레코드가 없습니다.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 하단 페이지네이션 -->
  <% if @total_pages > 1 %>
    <div class="row mt-4">
      <div class="col-12">
        <nav aria-label="테이블 페이지네이션">
          <ul class="pagination justify-content-center">
            <% if @page > 1 %>
              <li class="page-item">
                <%= link_to admin_database_table_path(table: @table_name, page: 1), 
                           class: "page-link" do %>
                  <i class="fas fa-angle-double-left"></i>
                <% end %>
              </li>
              <li class="page-item">
                <%= link_to admin_database_table_path(table: @table_name, page: @page - 1), 
                           class: "page-link" do %>
                  <i class="fas fa-angle-left"></i>
                <% end %>
              </li>
            <% end %>
            
            <% start_page = [@page - 2, 1].max %>
            <% end_page = [start_page + 4, @total_pages].min %>
            
            <% (start_page..end_page).each do |page_num| %>
              <li class="page-item <%= 'active' if page_num == @page %>">
                <%= link_to page_num, admin_database_table_path(table: @table_name, page: page_num), 
                           class: "page-link" %>
              </li>
            <% end %>
            
            <% if @page < @total_pages %>
              <li class="page-item">
                <%= link_to admin_database_table_path(table: @table_name, page: @page + 1), 
                           class: "page-link" do %>
                  <i class="fas fa-angle-right"></i>
                <% end %>
              </li>
              <li class="page-item">
                <%= link_to admin_database_table_path(table: @table_name, page: @total_pages), 
                           class: "page-link" do %>
                  <i class="fas fa-angle-double-right"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  <% end %>
</div>

<!-- 텍스트 확대 모달 -->
<div class="modal fade" id="textModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">전체 텍스트</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <pre id="modalText" class="bg-light p-3 rounded" style="white-space: pre-wrap; word-wrap: break-word;"></pre>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
<style>
  .icon-shape {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .card {
    border-radius: 0.75rem;
  }
  
  .table th {
    font-weight: 600;
    background-color: #f8f9fa !important;
  }
  
  .table-responsive {
    border-radius: 0 0 0.75rem 0.75rem;
  }
  
  .breadcrumb-item + .breadcrumb-item::before {
    content: "›";
    font-weight: bold;
  }
  
  .pagination .page-link {
    border-radius: 0.375rem;
    margin: 0 2px;
    border: 1px solid #dee2e6;
  }
  
  .pagination .page-item.active .page-link {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    border-color: #007bff;
  }
</style>

<script>
function showFullText(text) {
  document.getElementById('modalText').textContent = text;
  new bootstrap.Modal(document.getElementById('textModal')).show();
}
</script>
<% end %>