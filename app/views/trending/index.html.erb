<% content_for :title, "YouTube 트렌드 - #{YoutubeRegions.name(@region || YoutubeRegions::DEFAULT_REGION)}" %>

<div class="container">
  <!-- 헤더 섹션 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">
          <i class="fab fa-youtube text-danger"></i>
          YouTube 트렌드
          <span class="badge bg-primary"><%= YoutubeRegions.display_name(@region || YoutubeRegions::DEFAULT_REGION) %></span>
        </h1>
        
        <div class="text-muted small text-end">
          <% if @last_updated %>
            <div><i class="fas fa-clock"></i> 마지막 업데이트: <%= time_ago_in_words(@last_updated) %> 전</div>
          <% end %>
          <% if @next_collection %>
            <div><i class="fas fa-calendar-alt"></i> 다음 수집: <%= @next_collection.strftime("%m/%d %H:%M") %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 메가히트 섹션 (조회수 1천만 이상) -->
  <% if @mega_hits.present? %>
    <div class="row mb-5">
      <div class="col-12">
        <div class="card border-warning">
          <div class="card-header bg-warning bg-opacity-10">
            <h3 class="card-title mb-0">
              <i class="fas fa-fire text-warning"></i>
              <span class="text-warning fw-bold">메가히트</span>
              <small class="text-muted ms-2">(조회수 1천만 이상)</small>
            </h3>
          </div>
          <div class="card-body p-3">
            <div class="row g-3">
              <% @mega_hits.each do |video| %>
                <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                  <div class="card h-100 shadow-sm border-0 mega-hit-card">
                    <!-- 썸네일 -->
                    <div class="position-relative">
                      <button type="button" 
                              class="btn p-0 w-100 youtube-modal-btn"
                              data-bs-toggle="modal" 
                              data-bs-target="#youtubeModal"
                              data-video-id="<%= video.video_id %>"
                              data-video-title="<%= video.title %>">
                        <img src="<%= video.thumbnail_url %>" 
                             class="card-img-top rounded" 
                             alt="<%= video.title %>"
                             style="height: 120px; object-fit: cover;">
                      </button>
                      
                      <!-- 지속시간 배지 -->
                      <% if video.duration.present? %>
                        <span class="position-absolute bottom-0 end-0 me-2 mb-2">
                          <small class="badge bg-dark bg-opacity-75">
                            <%= format_korean_duration(video.duration) %>
                          </small>
                        </span>
                      <% end %>
                      
                      <!-- 지역 배지들 -->
                      <div class="position-absolute top-0 start-0 ms-2 mt-2 d-flex flex-wrap gap-1">
                        <% if video.respond_to?(:region_codes) && video.region_codes.present? %>
                          <% video.region_codes.each do |region_code| %>
                            <small class="badge bg-primary">
                              <%= region_code_to_korean(region_code) %>
                            </small>
                          <% end %>
                        <% else %>
                          <small class="badge bg-primary">
                            <%= region_code_to_korean(video.region_code) %>
                          </small>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="card-body p-2">
                      <!-- 제목 -->
                      <h6 class="card-title small mb-1" title="<%= video.title %>">
                        <%= truncate(video.title, length: 25) %>
                      </h6>
                      
                      <!-- 채널명 -->
                      <p class="text-muted small mb-1" title="<%= video.channel_title %>">
                        <i class="fas fa-user-circle"></i>
                        <%= truncate(video.channel_title, length: 15) %>
                      </p>
                      
                      <!-- 조회수 -->
                      <div class="text-center">
                        <span class="badge bg-danger">
                          <i class="fas fa-eye"></i>
                          <%= video.formatted_view_count %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 필터 섹션 -->
  <div class="row mb-4">
    <div class="col-md-8">
      <%= form_with url: trending_path, method: :get, local: true, class: "mb-2" do |f| %>
        <label class="form-label">지역 선택</label>
        <%= f.select :region, 
                     options_for_select(YoutubeRegions.primary_options, @region),
                     {}, 
                     { class: "form-select", onchange: "this.form.submit();" } %>
        <%= f.hidden_field :type, value: @type %>
      <% end %>
    </div>
    
    <%# 쇼츠/일반영상 필터 임시 비활성화 (2025.01.21) %>
    <%# <div class="col-md-4">
      <%= form_with url: trending_path, method: :get, local: true, class: "mb-2" do |f| %>
        <%# <label class="form-label">타입 선택</label>
        <%= f.select :type,
                     options_for_select([
                       ['전체', 'all'],
                       ['일반 영상', 'videos'],
                       ['쇼츠', 'shorts']
                     ], @type),
                     {},
                     { class: "form-select", onchange: "this.form.submit();" } %>
        <%# <%= f.hidden_field :region, value: @region %>
      <%# <% end %>
    <%# </div> %>
    
    <div class="col-md-4 d-flex align-items-end">
      <%= link_to search_path, class: "btn btn-outline-primary" do %>
        <i class="fas fa-search"></i>
        동영상 검색하기
      <% end %>
    </div>
  </div>

  <!-- 비디오 그리드 -->
  <% if @videos && @videos.any? %>
    <div class="videos-grid" id="videos-grid">
      <% @videos.each do |video| %>
        <div class="video-item">
          <div class="card video-card h-100 shadow-sm">
            <!-- 썸네일 -->
            <div class="position-relative">
              <div class="video-thumbnail-container" 
                   data-bs-toggle="modal" 
                   data-bs-target="#youtubeModal"
                   data-video-id="<%= video.video_id %>"
                   data-video-title="<%= video.title %>"
                   style="cursor: pointer;">
                <img src="<%= video.thumbnail_url %>" 
                     class="card-img-top video-thumbnail" 
                     alt="<%= video.title %>"
                     loading="lazy">
                
                <!-- 재생 버튼 오버레이 -->
                <div class="play-button-overlay">
                  <i class="fas fa-play-circle"></i>
                </div>
              </div>
              
              <!-- 재생 시간 -->
              <% if video.duration %>
                <span class="position-absolute bottom-0 end-0 m-2">
                  <small class="badge bg-dark bg-opacity-75">
                    <%= format_korean_duration(video.duration) %>
                  </small>
                </span>
              <% end %>
            </div>
            
            <div class="card-body d-flex flex-column">
              <!-- 제목 -->
              <h6 class="card-title" title="<%= video.title %>">
                <%= truncate(video.title, length: 30) %>
              </h6>
              
              <!-- 채널명 -->
              <p class="text-muted small mb-2">
                <i class="fas fa-user-circle"></i>
                <%= video.channel_title %>
              </p>
              
              <!-- 통계 정보 -->
              <div class="row text-center small text-muted mb-3">
                <div class="col-4">
                  <i class="fas fa-eye text-primary"></i><br>
                  <strong><%= video.formatted_view_count %></strong>
                </div>
                <div class="col-4">
                  <i class="fas fa-thumbs-up text-success"></i><br>
                  <strong><%= number_with_delimiter(video.like_count) %></strong>
                </div>
                <div class="col-4">
                  <i class="fas fa-comment text-info"></i><br>
                  <strong><%= number_with_delimiter(video.comment_count) %></strong>
                </div>
              </div>
              
              <!-- 업로드 시간 -->
              <div class="text-muted small">
                <i class="fas fa-calendar"></i>
                <%= korean_time_ago(video.published_at) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 데이터 없음 -->
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-video fa-5x text-muted"></i>
      </div>
      <h3 class="text-muted">데이터가 없습니다</h3>
      <p class="text-muted mb-4">
        <% if params[:q].present? %>
          "<%= params[:q] %>"에 대한 검색 결과가 없습니다.
        <% else %>
          <%= @region || 'KR' %> 지역의 
          <%# <%= @type == 'all' ? '전체' : (@type == 'shorts' ? '쇼츠' : '일반 영상') %> 
          트렌드 데이터가 아직 수집되지 않았습니다.
        <% end %>
      </p>
      

    </div>
  <% end %>
</div>

<!-- 로딩 스피너 -->
<div id="loading-spinner" class="text-center py-5 d-none">
  <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
    <span class="visually-hidden">로딩 중...</span>
  </div>
  <p class="mt-3 text-muted">데이터를 불러오는 중...</p>
</div>

<!-- YouTube 플레이어 모달 -->
<div class="modal fade" id="youtubeModal" tabindex="-1" aria-labelledby="youtubeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="youtubeModalLabel">YouTube 동영상</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <div class="youtube-player-container">
          <iframe id="youtubePlayer" 
                  width="100%" 
                  height="100%" 
                  src="" 
                  title="YouTube video player" 
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                  referrerpolicy="strict-origin-when-cross-origin" 
                  allowfullscreen>
          </iframe>
        </div>
      </div>
      <div class="modal-footer">
        <a id="youtubeExternalLink" href="#" target="_blank" class="btn btn-danger">
          <i class="fab fa-youtube"></i> YouTube에서 보기
        </a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
<style>
  /* 4열 그리드 레이아웃 (여유있는 디스플레이) */
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }
  
  /* 반응형 그리드 */
  @media (max-width: 1200px) {
    .videos-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .videos-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .videos-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* 썸네일 호버 효과 및 재생 버튼 */
  .video-thumbnail-container {
    position: relative;
    overflow: hidden;
  }
  
  .video-thumbnail-container:hover .video-thumbnail {
    transform: scale(1.05);
  }
  
  .play-button-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
    pointer-events: none;
  }
  
  .video-thumbnail-container:hover .play-button-overlay {
    color: #ff0000;
    transform: translate(-50%, -50%) scale(1.1);
  }
  
  /* YouTube 플레이어 모달 */
  .youtube-player-container {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 비율 */
    background: #000;
  }
  
  .youtube-player-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  /* 모달 크기 조정 */
  @media (max-width: 1200px) {
    .modal-xl {
      max-width: 90%;
    }
  }
  
  @media (max-width: 768px) {
    .modal-xl {
      max-width: 95%;
      margin: 1rem;
    }
    
    .youtube-player-container {
      padding-bottom: 75%; /* 모바일에서 좀 더 높은 비율 */
    }
  }
  
  /* 기존 스타일 보존 */
  .video-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  .video-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  }
  .video-thumbnail {
    aspect-ratio: 16/9;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  /* 메가히트 섹션 스타일 */
  .mega-hit-card {
    transition: all 0.3s ease;
    border: 1px solid #ffc107 !important;
  }
  
  .mega-hit-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3) !important;
    border-color: #ff9800 !important;
  }
  
  .mega-hit-card .card-img-top {
    transition: all 0.3s ease;
  }
  
  .mega-hit-card:hover .card-img-top {
    transform: scale(1.05);
  }
  
  .mega-hit-card .youtube-modal-btn {
    border-radius: 0.375rem;
    overflow: hidden;
  }
  
  .mega-hit-card .badge.bg-danger {
    background: linear-gradient(45deg, #dc3545, #ff6b6b) !important;
    font-weight: bold;
    box-shadow: 0 2px 4px rgba(220, 53, 69, 0.3);
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // YouTube 모달 처리
  const youtubeModal = document.getElementById('youtubeModal');
  const youtubePlayer = document.getElementById('youtubePlayer');
  const youtubeModalLabel = document.getElementById('youtubeModalLabel');
  const youtubeExternalLink = document.getElementById('youtubeExternalLink');
  
  if (youtubeModal) {
    // 모달이 열릴 때
    youtubeModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const videoId = button.getAttribute('data-video-id');
      const videoTitle = button.getAttribute('data-video-title');
      
      if (videoId) {
        // YouTube 플레이어 URL 생성 (autoplay, 관련 동영상 숨김, 브랜딩 최소화)
        const embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1&showinfo=0`;
        const watchUrl = `https://www.youtube.com/watch?v=${videoId}`;
        
        // iframe src 설정
        youtubePlayer.src = embedUrl;
        
        // 모달 제목 설정
        youtubeModalLabel.textContent = videoTitle || 'YouTube 동영상';
        
        // 외부 링크 설정
        youtubeExternalLink.href = watchUrl;
      }
    });
    
    // 모달이 닫힐 때 (동영상 정지)
    youtubeModal.addEventListener('hide.bs.modal', function() {
      youtubePlayer.src = '';
    });
  }
});
</script>
<% end %>

<script>
  // 폼 제출시 로딩 스피너 표시
  document.querySelectorAll('form').forEach(form => {
    form.addEventListener('submit', function() {
      document.getElementById('loading-spinner').classList.remove('d-none');
    });
  });
</script>
