<% content_for :title, "SQL 쿼리 실행" %>

<div class="container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6">
          <i class="fas fa-code"></i>
          SQL 쿼리 실행
        </h1>
        <%= link_to "← 뒤로", db_admin_path, class: "btn btn-outline-secondary" %>
      </div>
      <p class="text-muted">SELECT 쿼리만 실행 가능합니다 (읽기 전용)</p>
    </div>
  </div>
  
  <!-- SQL 입력 폼 -->
  <div class="row mb-4">
    <div class="col-12">
      <%= form_with url: db_admin_query_path, method: :get, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :sql, "SQL 쿼리", class: "form-label" %>
          <%= f.text_area :sql, value: @sql, 
                          class: "form-control", 
                          rows: 8,
                          placeholder: "예: SELECT * FROM trending_videos WHERE region_code = 'KR' ORDER BY view_count DESC LIMIT 10;" %>
        </div>
        
        <div class="mb-3">
          <%= f.submit "쿼리 실행", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- 에러 메시지 -->
  <% if @error %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-danger">
          <h5><i class="fas fa-exclamation-triangle"></i> 오류</h5>
          <pre><%= @error %></pre>
        </div>
      </div>
    </div>
  <% end %>
  
  <!-- 쿼리 결과 -->
  <% if @results && @results.any? %>
    <div class="row">
      <div class="col-12">
        <h3>쿼리 결과 (<%= @results.length %>건)</h3>
        
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead class="table-dark">
              <tr>
                <% @results.columns.each do |column| %>
                  <th><%= column %></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @results.each do |row| %>
                <tr>
                  <% @results.columns.each do |column| %>
                    <td>
                      <% value = row[column] %>
                      <% if value.nil? %>
                        <span class="text-muted">NULL</span>
                      <% elsif value.to_s.length > 100 %>
                        <%= truncate(value.to_s, length: 100) %>
                      <% else %>
                        <%= value %>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% elsif @sql.present? && !@error %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-info">
          쿼리 결과가 없습니다.
        </div>
      </div>
    </div>
  <% end %>
  
  <!-- 유용한 쿼리 예제 -->
  <div class="row mt-5">
    <div class="col-12">
      <h3>유용한 쿼리 예제</h3>
      <div class="accordion" id="queryExamples">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#example1">
              트렌딩 비디오 조회
            </button>
          </h2>
          <div id="example1" class="accordion-collapse collapse" data-bs-parent="#queryExamples">
            <div class="accordion-body">
              <pre>SELECT video_id, title, channel_title, view_count, region_code 
FROM trending_videos 
WHERE region_code = 'KR' 
ORDER BY view_count DESC 
LIMIT 10;</pre>
            </div>
          </div>
        </div>
        
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#example2">
              쇼츠 영상만 조회
            </button>
          </h2>
          <div id="example2" class="accordion-collapse collapse" data-bs-parent="#queryExamples">
            <div class="accordion-body">
              <pre>SELECT video_id, title, view_count, like_count 
FROM trending_videos 
WHERE is_shorts = 1 
ORDER BY view_count DESC;</pre>
            </div>
          </div>
        </div>
        
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#example3">
              수집 로그 확인
            </button>
          </h2>
          <div id="example3" class="accordion-collapse collapse" data-bs-parent="#queryExamples">
            <div class="accordion-body">
              <pre>SELECT region_code, status, videos_collected, started_at, completed_at 
FROM collection_logs 
ORDER BY started_at DESC;</pre>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>