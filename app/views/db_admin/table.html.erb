<% content_for :title, "#{@table_name} 테이블" %>

<div class="container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6">
          <i class="fas fa-table"></i>
          <code><%= @table_name %></code> 테이블
        </h1>
        <%= link_to "← 뒤로", db_admin_path, class: "btn btn-outline-secondary" %>
      </div>
      <p class="text-muted">
        총 <%= number_with_delimiter(@total_count) %>개 레코드 
        (<%= @page %>/<%= @total_pages %> 페이지)
      </p>
    </div>
  </div>
  
  <!-- 페이지네이션 (상단) -->
  <% if @total_pages > 1 %>
    <div class="row mb-3">
      <div class="col-12">
        <nav>
          <ul class="pagination">
            <% if @page > 1 %>
              <%= link_to "이전", db_admin_table_path(table: @table_name, page: @page - 1), 
                         class: "page-link" %>
            <% end %>
            
            <% ([@page - 2, 1].max..[@page + 2, @total_pages].min).each do |p| %>
              <% if p == @page %>
                <li class="page-item active">
                  <span class="page-link"><%= p %></span>
                </li>
              <% else %>
                <li class="page-item">
                  <%= link_to p, db_admin_table_path(table: @table_name, page: p), 
                             class: "page-link" %>
                </li>
              <% end %>
            <% end %>
            
            <% if @page < @total_pages %>
              <li class="page-item">
                <%= link_to "다음", db_admin_table_path(table: @table_name, page: @page + 1), 
                           class: "page-link" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  <% end %>
  
  <!-- 테이블 데이터 -->
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead class="table-dark">
            <tr>
              <% @columns.each do |column| %>
                <th>
                  <%= column.name %>
                  <br>
                  <small class="text-muted"><%= column.type %></small>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @rows.each do |row| %>
              <tr>
                <% @columns.each do |column| %>
                  <td>
                    <% value = row[column.name] %>
                    <% if value.nil? %>
                      <span class="text-muted">NULL</span>
                    <% elsif value.to_s.length > 50 %>
                      <%= truncate(value.to_s, length: 50) %>
                    <% else %>
                      <%= value %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <!-- 페이지네이션 (하단) -->
  <% if @total_pages > 1 %>
    <div class="row mt-3">
      <div class="col-12">
        <nav>
          <ul class="pagination">
            <% if @page > 1 %>
              <li class="page-item">
                <%= link_to "이전", db_admin_table_path(table: @table_name, page: @page - 1), 
                           class: "page-link" %>
              </li>
            <% end %>
            
            <% ([@page - 2, 1].max..[@page + 2, @total_pages].min).each do |p| %>
              <% if p == @page %>
                <li class="page-item active">
                  <span class="page-link"><%= p %></span>
                </li>
              <% else %>
                <li class="page-item">
                  <%= link_to p, db_admin_table_path(table: @table_name, page: p), 
                             class: "page-link" %>
                </li>
              <% end %>
            <% end %>
            
            <% if @page < @total_pages %>
              <li class="page-item">
                <%= link_to "다음", db_admin_table_path(table: @table_name, page: @page + 1), 
                           class: "page-link" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  <% end %>
</div>