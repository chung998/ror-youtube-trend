    bottom: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
  }
  .shorts-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255, 0, 0, 0.9);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: bold;
  }
  .card-title a:hover {
    color: #dc3545 !important;
  }
  .video-stats {
    background: #f8f9fa;
    border-radius: 6px;
    padding: 8px;
  }
  .tiny-text {
    font-size: 0.65rem;
  }
