<% content_for :title, "YouTube 동영상 검색" %>

<div class="container-fluid">
  <!-- 검색 헤더 -->
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-6">
        <i class="fab fa-youtube text-danger"></i>
        YouTube 동영상 검색
      </h1>
      <p class="text-muted">키워드, 지역, 길이, 발행 날짜 등 다양한 필터로 검색하고 결과를 정렬할 수 있습니다</p>
    </div>
  </div>

  <!-- 검색 필터 -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-search"></i>
            검색 필터
          </h5>
        </div>
        <div class="card-body">
          <%= form_with url: search_results_path, method: :get, local: true, class: "row g-3", id: "search-form" do |f| %>
            <!-- 검색 키워드 -->
            <div class="col-md-3">
              <label for="search_query" class="form-label">검색 키워드</label>
              <%= f.text_field :q, value: @query, 
                              class: "form-control", 
                              id: "search_query",
                              placeholder: "예: 케이팝, 요리, 게임 등" %>
            </div>

            <!-- 지역 선택 -->
            <div class="col-md-2">
              <label for="search_region" class="form-label">지역</label>
              <%= f.select :region, 
                          options_for_select(YoutubeSearchService.region_options, @region),
                          {}, 
                          { class: "form-select", id: "search_region" } %>
            </div>

            <!-- 동영상 길이 -->
            <div class="col-md-2">
              <label for="search_duration" class="form-label">동영상 길이</label>
              <%= f.select :duration, 
                          options_for_select(YoutubeSearchService.duration_options, @duration),
                          {}, 
                          { class: "form-select", id: "search_duration" } %>
            </div>

            <!-- YouTube API 정렬 -->
            <div class="col-md-2">
              <label for="search_order" class="form-label">YouTube 정렬</label>
              <%= f.select :order, 
                          options_for_select(YoutubeSearchService.order_options, @order),
                          {}, 
                          { class: "form-select", id: "search_order" } %>
            </div>

            <!-- 최대 결과 수 -->
            <div class="col-md-2">
              <label for="search_max_results" class="form-label">최대 개수</label>
              <%= f.select :max_results, 
                          options_for_select([
                            ['10개', 10],
                            ['25개 (기본)', 25],
                            ['50개 (최대)', 50]
                          ], @max_results || 25),
                          {}, 
                          { class: "form-select", id: "search_max_results" } %>
            </div>

            <!-- 검색 버튼 -->
            <div class="col-md-1 d-flex align-items-end">
              <%= f.submit "검색", class: "btn btn-primary" %>
            </div>

            <!-- 발행 날짜 시작 -->
            <div class="col-md-3">
              <label for="search_published_after" class="form-label">발행 날짜 (시작)</label>
              <%= f.date_field :published_after, 
                              value: params[:published_after],
                              class: "form-control", 
                              id: "search_published_after" %>
            </div>

            <!-- 발행 날짜 끝 -->
            <div class="col-md-3">
              <label for="search_published_before" class="form-label">발행 날짜 (끝)</label>
              <%= f.date_field :published_before, 
                              value: params[:published_before],
                              class: "form-control", 
                              id: "search_published_before" %>
            </div>

            <!-- 초기화 버튼 -->
            <div class="col-md-6 d-flex align-items-end">
              <%= link_to "초기화", search_path, class: "btn btn-outline-secondary" %>
            </div>

            <!-- 숨김 필드 -->
            <%= f.hidden_field :page_token, value: params[:page_token] %>
            <%= f.hidden_field :sort, value: @sort, id: "hidden_sort" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 오류 메시지 -->
  <% if @error %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-danger" role="alert">
          <i class="fas fa-exclamation-triangle"></i>
          <%= @error %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 검색 결과 -->
  <% if @search_results %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
            <div class="d-flex align-items-center flex-wrap gap-3">
              <h5 class="mb-0">
                <i class="fas fa-list"></i>
                검색 결과
                <% if @search_results[:total_results] %>
                  <small class="text-muted ms-2">
                    현재 페이지: <strong><%= @search_results[:items].length %>개</strong> / 
                    전체: <span class="badge bg-secondary"><%= number_with_delimiter(@search_results[:total_results]) %>개</span>
                  </small>
                <% end %>
              </h5>
              
              <!-- 실시간 정렬 옵션 -->
              <div class="d-flex align-items-center gap-2">
                <label for="live_sort" class="form-label mb-0 small">정렬:</label>
                <select id="live_sort" class="form-select form-select-sm" style="width: auto;">
                  <% YoutubeSearchService.sort_options.each do |option| %>
                    <option value="<%= option[1] %>" <%= 'selected' if @sort == option[1] %>>
                      <%= option[0] %>
                    </option>
                  <% end %>
                </select>
              </div>
            </div>
            
            <!-- 페이지네이션 (상단) -->
            <% if @search_results[:next_page_token] || @search_results[:prev_page_token] %>
              <div class="d-flex gap-2">
                <% if @search_results[:prev_page_token] %>
                  <%= link_to "← 이전", 
                             search_results_path(
                               q: @query, 
                               region: @region, 
                               duration: @duration, 
                               order: @order,
                               sort: @sort,
                               max_results: @max_results,
                               published_after: params[:published_after],
                               published_before: params[:published_before],
                               page_token: @search_results[:prev_page_token]
                             ), 
                             class: "btn btn-sm btn-outline-secondary" %>
                <% end %>
                
                <% if @search_results[:next_page_token] %>
                  <%= link_to "다음 →", 
                             search_results_path(
                               q: @query, 
                               region: @region, 
                               duration: @duration, 
                               order: @order,
                               sort: @sort,
                               max_results: @max_results,
                               published_after: params[:published_after],
                               published_before: params[:published_before],
                               page_token: @search_results[:next_page_token]
                             ), 
                             class: "btn btn-sm btn-outline-secondary" %>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <div class="card-body">
            <% if @search_results[:items].any? %>
              <div class="videos-grid" id="videos-container">
                <% @search_results[:items].each_with_index do |video, index| %>
                  <div class="video-item" 
                       data-view-count="<%= video[:view_count] %>"
                       data-like-count="<%= video[:like_count] %>"
                       data-comment-count="<%= video[:comment_count] %>"
                       data-published-at="<%= video[:published_at].to_i %>"
                       data-duration-seconds="<%= video[:duration_seconds] %>"
                       data-title="<%= video[:title].downcase %>"
                       data-original-index="<%= index %>">
                    <div class="card h-100 video-card">
                      <!-- 썸네일 -->
                      <div class="position-relative">
                        <div class="video-thumbnail-container" 
                             data-bs-toggle="modal" 
                             data-bs-target="#youtubeModal"
                             data-video-id="<%= video[:video_id] %>"
                             data-video-title="<%= video[:title] %>"
                             style="cursor: pointer;">
                          <%= image_tag video[:thumbnail_url], 
                                       class: "card-img-top video-thumbnail", 
                                       alt: video[:title],
                                       loading: "lazy" %>
                          <!-- 재생 버튼 오버레이 -->
                          <div class="play-button-overlay">
                            <i class="fas fa-play-circle"></i>
                          </div>
                        </div>
                        
                        <!-- 지속시간 배지 -->
                        <% if video[:duration_seconds] && video[:duration_seconds] > 0 %>
                          <span class="duration-badge">
                            <%= YoutubeSearchService.format_duration(video[:duration_seconds]) %>
                          </span>
                        <% end %>
                        
                        <!-- Shorts 배지 -->
                        <% if video[:duration_seconds] && video[:duration_seconds] <= 60 %>
                          <span class="shorts-badge">Shorts</span>
                        <% end %>
                      </div>
                      
                      <!-- 동영상 정보 -->
                      <div class="card-body">
                        <h6 class="card-title">
                          <%= link_to video[:watch_url], target: "_blank", class: "text-decoration-none text-dark" do %>
                            <%= truncate(video[:title], length: 80) %>
                          <% end %>
                        </h6>
                        
                        <p class="card-text text-muted small mb-2">
                          <i class="fas fa-user"></i>
                          <%= video[:channel_title] %>
                        </p>
                        
                        <!-- 통계 정보 -->
                        <div class="video-stats mb-2">
                          <div class="row text-center">
                            <div class="col-4">
                              <small class="text-muted">
                                <i class="fas fa-eye text-primary"></i><br>
                                <strong><%= YoutubeSearchService.format_view_count(video[:view_count]) %></strong><br>
                                <span class="tiny-text">조회수</span>
                              </small>
                            </div>
                            <div class="col-4">
                              <small class="text-muted">
                                <i class="fas fa-thumbs-up text-success"></i><br>
                                <strong><%= number_with_delimiter(video[:like_count]) %></strong><br>
                                <span class="tiny-text">좋아요</span>
                              </small>
                            </div>
                            <div class="col-4">
                              <small class="text-muted">
                                <i class="fas fa-comment text-warning"></i><br>
                                <strong><%= number_with_delimiter(video[:comment_count]) %></strong><br>
                                <span class="tiny-text">댓글</span>
                              </small>
                            </div>
                          </div>
                        </div>
                        
                        <p class="card-text">
                          <small class="text-muted">
                            <%= truncate(video[:description], length: 100) %>
                          </small>
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center">
                          <small class="text-muted">
                            <i class="fas fa-calendar"></i>
                            <%= video[:published_at].strftime("%Y.%m.%d") %>
                          </small>
                          
                          <%= link_to "YouTube에서 보기", video[:watch_url], 
                                     target: "_blank", 
                                     class: "btn btn-sm btn-outline-danger" %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- 페이지네이션 (하단) -->
              <% if @search_results[:next_page_token] || @search_results[:prev_page_token] %>
                <div class="d-flex justify-content-center gap-2 mt-4">
                  <% if @search_results[:prev_page_token] %>
                    <%= link_to "← 이전 페이지", 
                               search_results_path(
                                 q: @query, 
                                 region: @region, 
                                 duration: @duration, 
                                 order: @order,
                                 sort: @sort,
                                 max_results: @max_results,
                                 published_after: @published_after,
                                 published_before: @published_before,
                                 page_token: @search_results[:prev_page_token]
                               ), 
                               class: "btn btn-outline-secondary" %>
                  <% end %>
                  
                  <% if @search_results[:next_page_token] %>
                    <%= link_to "다음 페이지 →", 
                               search_results_path(
                                 q: @query, 
                                 region: @region, 
                                 duration: @duration, 
                                 order: @order,
                                 sort: @sort,
                                 max_results: @max_results,
                                 published_after: @published_after,
                                 published_before: @published_before,
                                 page_token: @search_results[:next_page_token]
                               ), 
                               class: "btn btn-outline-secondary" %>
                  <% end %>
                </div>
              <% end %>
              
            <% else %>
              <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">검색 결과가 없습니다</h5>
                <p class="text-muted">다른 키워드나 필터 조건으로 다시 검색해보세요</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% elsif @query.present? %>
    <!-- 검색어는 있지만 결과가 없는 경우 -->
    <div class="row">
      <div class="col-12">
        <div class="text-center py-5">
          <i class="fas fa-search fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">검색을 시작해보세요</h5>
          <p class="text-muted">위의 검색 필터를 사용하여 원하는 동영상을 찾아보세요</p>
        </div>
      </div>
    </div>
  <% else %>
    <!-- 초기 상태 -->
    <div class="row">
      <div class="col-12">
        <div class="text-center py-5">
          <i class="fab fa-youtube fa-3x text-danger mb-3"></i>
          <h5>YouTube 동영상 검색</h5>
          <p class="text-muted">검색어를 입력하고 다양한 필터를 설정하여 원하는 동영상을 찾아보세요</p>
          
          <!-- 인기 검색어 예시 -->
          <div class="mt-4">
            <h6 class="text-muted">인기 검색어 예시:</h6>
            <div class="d-flex flex-wrap justify-content-center gap-2">
              <% ['케이팝', '요리', '게임', '뉴스', '운동', '여행', '음악', '영화'].each do |keyword| %>
                <%= link_to keyword, 
                           search_results_path(q: keyword, region: 'KR'), 
                           class: "btn btn-sm btn-outline-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- YouTube 플레이어 모달 -->
<div class="modal fade" id="youtubeModal" tabindex="-1" aria-labelledby="youtubeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="youtubeModalLabel">YouTube 동영상</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <div class="youtube-player-container">
          <iframe id="youtubePlayer" 
                  width="100%" 
                  height="100%" 
                  src="" 
                  title="YouTube video player" 
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                  referrerpolicy="strict-origin-when-cross-origin" 
                  allowfullscreen>
          </iframe>
        </div>
      </div>
      <div class="modal-footer">
        <a id="youtubeExternalLink" href="#" target="_blank" class="btn btn-danger">
          <i class="fab fa-youtube"></i> YouTube에서 보기
        </a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
