<script>
document.addEventListener('DOMContentLoaded', function() {
  // 인기 태그 클릭 이벤트
  const tagButtons = document.querySelectorAll('.tag-btn');
  const searchInput = document.getElementById('search_query');
  
  tagButtons.forEach(button => {
    button.addEventListener('click', function() {
      const tag = this.getAttribute('data-tag');
      if (searchInput) {
        searchInput.value = tag;
        searchInput.focus();
      }
    });
  });
  
  // 날짜 프리셋 버튼 기능
  const datePresetButtons = document.querySelectorAll('.date-preset-btn');
  const hiddenDatePreset = document.getElementById('hidden_date_preset');
  const customDatesDiv = document.getElementById('custom-dates');
  const toggleCustomButton = document.getElementById('toggle-custom-dates');
  
  datePresetButtons.forEach(button => {
    button.addEventListener('click', function() {
      // 모든 버튼에서 active 클래스 제거
      datePresetButtons.forEach(btn => btn.classList.remove('active'));
      
      // 클릭된 버튼에 active 클래스 추가
      this.classList.add('active');
      
      // 숨김 필드 업데이트
      const preset = this.getAttribute('data-preset');
      if (hiddenDatePreset) {
        hiddenDatePreset.value = preset;
      }
      
      // 커스텀 날짜 영역 숨기기
      if (customDatesDiv) {
        customDatesDiv.style.display = 'none';
      }
    });
  });
  
  // 커스텀 날짜 토글
  if (toggleCustomButton && customDatesDiv) {
    toggleCustomButton.addEventListener('click', function() {
      const isVisible = customDatesDiv.style.display !== 'none';
      customDatesDiv.style.display = isVisible ? 'none' : 'block';
      
      if (!isVisible) {
        // 프리셋 버튼들의 active 상태 제거
        datePresetButtons.forEach(btn => btn.classList.remove('active'));
        if (hiddenDatePreset) {
          hiddenDatePreset.value = '';
        }
      }
    });
  }
  
  // 필터 초기화 버튼
  const resetButton = document.getElementById('resetFilters');
  if (resetButton) {
    resetButton.addEventListener('click', function() {
      // 폼 초기화
      document.getElementById('search-form').reset();
      
      // 날짜 프리셋 버튼 초기화
      datePresetButtons.forEach(btn => btn.classList.remove('active'));
      if (datePresetButtons.length > 0) {
        datePresetButtons[0].classList.add('active'); // 첫 번째(전체 기간)를 활성화
      }
      
      // 커스텀 날짜 영역 숨기기
      if (customDatesDiv) {
        customDatesDiv.style.display = 'none';
      }
      
      // 검색어에 포커스
      if (searchInput) {
        searchInput.focus();
      }
    });
  }

  const liveSortSelect = document.getElementById('live_sort');
  const hiddenSortField = document.getElementById('hidden_sort');
  const videosContainer = document.getElementById('videos-container');
  
  // 정렬 기능
  if (liveSortSelect && videosContainer) {
    liveSortSelect.addEventListener('change', function() {
      const sortValue = this.value;
      
      // 정렬 시작 표시
      videosContainer.classList.add('sorting');
      
      // 숨김 필드 업데이트
      if (hiddenSortField) {
        hiddenSortField.value = sortValue;
      }
      
      // 비디오 아이템들 가져오기
      const videoItems = Array.from(videosContainer.querySelectorAll('.video-card-wrapper'));
      
      // 정렬 함수
      videoItems.sort((a, b) => {
        switch(sortValue) {
          case 'view_count_desc':
            return parseInt(b.dataset.viewCount) - parseInt(a.dataset.viewCount);
          case 'view_count_asc':
            return parseInt(a.dataset.viewCount) - parseInt(b.dataset.viewCount);
          case 'like_count_desc':
            return parseInt(b.dataset.likeCount) - parseInt(a.dataset.likeCount);
          case 'comment_count_desc':
            return parseInt(b.dataset.commentCount) - parseInt(a.dataset.commentCount);
          case 'published_desc':
            return parseInt(b.dataset.publishedAt) - parseInt(a.dataset.publishedAt);
          case 'published_asc':
            return parseInt(a.dataset.publishedAt) - parseInt(b.dataset.publishedAt);
          case 'duration_desc':
            return parseInt(b.dataset.durationSeconds) - parseInt(a.dataset.durationSeconds);
          case 'duration_asc':
            return parseInt(a.dataset.durationSeconds) - parseInt(b.dataset.durationSeconds);
          case 'title_asc':
            return a.dataset.title.localeCompare(b.dataset.title);
          case 'title_desc':
            return b.dataset.title.localeCompare(a.dataset.title);
          default:
            // relevance: 원래 순서로 복원
            return parseInt(a.dataset.originalIndex) - parseInt(b.dataset.originalIndex);
        }
      });
      
      // DOM에서 기존 아이템들 제거
      videoItems.forEach(item => item.remove());
      
      // 정렬된 순서로 다시 추가
      setTimeout(() => {
        videoItems.forEach(item => videosContainer.appendChild(item));
        videosContainer.classList.remove('sorting');
      }, 100);
    });
  }
  
  // YouTube 모달 처리
  const youtubeModal = document.getElementById('youtubeModal');
  const youtubePlayer = document.getElementById('youtubePlayer');
  const youtubeModalLabel = document.getElementById('youtubeModalLabel');
  const youtubeExternalLink = document.getElementById('youtubeExternalLink');
  
  if (youtubeModal) {
    // 모달이 열릴 때
    youtubeModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const videoId = button.getAttribute('data-video-id');
      const videoTitle = button.getAttribute('data-video-title');
      
      if (videoId) {
        // YouTube 플레이어 URL 생성 (autoplay, 관련 동영상 숨김, 브랜딩 최소화)
        const embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1&showinfo=0`;
        const watchUrl = `https://www.youtube.com/watch?v=${videoId}`;
        
        // iframe src 설정
        youtubePlayer.src = embedUrl;
        
        // 모달 제목 설정
        youtubeModalLabel.textContent = videoTitle || 'YouTube 동영상';
        
        // 외부 링크 설정
        youtubeExternalLink.href = watchUrl;
      }
    });
    
    // 모달이 닫힐 때 (동영상 정지)
    youtubeModal.addEventListener('hide.bs.modal', function() {
      youtubePlayer.src = '';
    });
  }
});
