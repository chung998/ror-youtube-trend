#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [[ "$*" == *"rails server"* ]] || [[ "$*" == *"./bin/rails server"* ]]; then
  ./bin/rails db:prepare
  
  # Setup Solid Cache, Queue, and Cable tables for PostgreSQL
  ./bin/rails solid_cache:setup || echo "Solid Cache setup failed or already exists"
  ./bin/rails solid_queue:setup || echo "Solid Queue setup failed or already exists"  
  ./bin/rails solid_cable:setup || echo "Solid Cable setup failed or already exists"
fi

exec "${@}"
